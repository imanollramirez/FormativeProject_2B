<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.patients.PatientsFragment">

    <TextView
        android:id="@+id/txtEditTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Gestión de tickets"
        android:textColor="#343434"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTicketsInfo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTicketsInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/poppins"
        android:text="Complete los campos"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtAuthor"
        app:layout_constraintStart_toStartOf="@+id/txtEditTicket"
        app:layout_constraintTop_toBottomOf="@+id/txtEditTicket" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvTickets"
        android:layout_width="414dp"
        android:layout_height="413dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginVertical="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddTicket"
        app:layout_constraintVertical_bias="0.23" />

    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="255dp"
        android:layout_height="88dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start|top"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTicket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFinishDate" />

    <EditText
        android:id="@+id/txtAuthorsEmail"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Correo del autor"
        android:inputType="text"
        android:textColor="#343434"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtFinishDate"
        app:layout_constraintEnd_toStartOf="@+id/txtFinishDate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtAuthor"
        android:layout_width="188dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Autor"
        android:inputType="text"
        android:textColor="#343434"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtFinishDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtTicketsInfo2" />

    <EditText
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Título"
        android:inputType="text"
        android:textColor="#343434"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtAuthor"
        app:layout_constraintEnd_toStartOf="@+id/txtAuthor"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtFinishDate"
        android:layout_width="185dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Fecha de Finalización"
        android:inputType="date"
        android:textColor="#343434"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtAuthorsEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtAuthor" />

    <Button
        android:id="@+id/btnAddTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#343434"
        android:fontFamily="@font/poppins_bold"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>